<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_item_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_contact"
        android:layout_width="@dimen/contact_image_w_h"
        android:layout_height="@dimen/contact_image_w_h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@mipmap/ic_launcher">

    </com.google.android.material.imageview.ShapeableImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_name_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/name_surname_contacts_item"
        android:textSize="@dimen/name_surname_textSize"
        android:textColor="@color/contacts_name_surname"
        android:fontFamily="@font/open_sans_medium"
        app:layout_constraintBottom_toTopOf="@+id/text_career"
        app:layout_constraintStart_toEndOf="@+id/imageView_contact"
        app:layout_constraintTop_toTopOf="@+id/imageView_contact">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/career_contacts_item"
        android:textSize="@dimen/career_textSize"
        android:textColor="@color/contacts_career"
        android:fontFamily="@font/open_sans_medium"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_contact"
        app:layout_constraintStart_toStartOf="@+id/text_name_surname"
        app:layout_constraintTop_toBottomOf="@+id/text_name_surname">

    </androidx.appcompat.widget.AppCompatTextView>

    <View
        android:id="@+id/view_trash_bin"
        android:layout_width="@dimen/trash_bin_w_h"
        android:layout_height="@dimen/trash_bin_w_h"
        android:background="@drawable/outline_delete_outline_24"
        android:backgroundTint="@color/delete_bin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>